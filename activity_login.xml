<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

     android:background="@drawable/bkg"
    tools:context=".Login">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="243dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="login.json"
        app:lottie_loop="true" />
    <!--    Layout of screen change button   -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="250dp">

        <TextView
            android:id="@+id/LoginScreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/White"
            android:text="WHAT YOU COOK TODAY "
            android:textColor="@color/mediumslateblue"
            android:textSize="22dp"

            android:layout_marginLeft="@dimen/_55sdp"
            android:textStyle="bold"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="-225dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:hint="Email"


        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        app:endIconMode="clear_text"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:hint="Pincode"


        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
         app:passwordToggleEnabled="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/_120sdp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_radius2"
            android:elevation="@dimen/_120sdp"
            android:text=" Login Now "
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SignupScreen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_33sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/button_radius2"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:text="  Create Account   "
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            >

            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_88sdp"
                android:text="If you are admin click "
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here"

                android:id="@+id/adminlogin"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="?attr/colorSecondaryVariant"
                />



        </LinearLayout>



    </LinearLayout>


    <!--    <ProgressBar-->
    <!--        android:id="@+id/progress_Bar"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:backgroundTint="@color/darkseagreen"-->
    <!--        />-->


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress_Bar"
        android:layout_width="84dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"



        app:lottie_autoPlay="true"
        app:lottie_fileName="Progresbar.json"
        app:lottie_loop="true" />


</LinearLayout>