<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".dashboardadmindishview"
    tools:ignore="MissingDefaultResource">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
         android:layout_marginBottom="@dimen/_95sdp"
        android:orientation="horizontal">

        <!--            1st CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/o"
                app:lottie_autoPlay="true"
                android:layout_width="145dp"
                android:layout_height="140dp"
                app:lottie_fileName="21733-order-button.json"
                app:lottie_loop="true"/>
            <!--            <ImageView-->
            <!--        -->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="125dp"-->
            <!--                app:srcCompat="@drawable/diethistroy" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:layout_marginTop="124dp"
                android:layout_marginLeft="18dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>
        <!--            2nd CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView

                android:id="@+id/so"
                app:lottie_autoPlay="true"
                android:layout_width="145dp"
                android:layout_height="140dp"
                app:lottie_fileName="specia;.json"
                app:lottie_loop="true"/>

            <!--            <ImageView-->
            <!--               -->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="125dp"-->
            <!--                app:srcCompat="@drawable/nutrition" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Order"
                android:layout_marginTop="124dp"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>